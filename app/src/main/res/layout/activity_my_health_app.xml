<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyHealthApp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="368dp"
            android:layout_height="499dp" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="8dp">

        <EditText
                android:layout_width="151dp"
                android:layout_height="44dp"
                android:inputType="numberDecimal"
                android:ems="10"
                tools:layout_editor_absoluteY="170dp" android:id="@+id/weight"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.502" android:hint="Ingresa tu peso"/>
        <EditText
                android:layout_width="151dp"
                android:layout_height="37dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/height" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/weight" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.502"
                android:hint="Ingresa tu altura"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="97dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/img" android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/weight" android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="Calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calculate" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/height" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="25dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/calculate"
                android:id="@+id/imc" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.501"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/range" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imc" android:textSize="24sp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>